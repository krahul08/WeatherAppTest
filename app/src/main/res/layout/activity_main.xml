<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_theme"
    android:orientation="vertical"
    tools:context=".views.MainActivity">


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/app_theme"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginVertical="@dimen/margin_small"
                    android:gravity="center"
                    android:orientation="vertical"
                    tools:targetApi="o">

                    <TextView
                        android:id="@+id/temperature_all"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:padding="30dp"
                        android:text="32"
                        android:textColor="@color/color_white"
                        android:textSize="50sp" />

                    <TextView
                        android:id="@+id/weather_desc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginVertical="8dp"
                        android:gravity="center"
                        android:text="Heavy rain"
                        android:textColor="@color/color_white"
                        android:textSize="20sp"
                        tools:targetApi="o" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <!--Center layout-->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginHorizontal="12dp"
                            android:layout_marginVertical="8dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:weightSum="1"
                            tools:targetApi="o">

                            <TextView
                                android:id="@+id/min_temp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight=".3"
                                android:drawableStart="@drawable/ic_arrow_downward_blue_400_18dp"
                                android:drawableLeft="@drawable/ic_arrow_downward_blue_400_18dp"
                                android:drawablePadding="4dp"
                                android:text="26"
                                android:textColor="@color/color_white"
                                android:textSize="12sp"
                                tools:ignore="NestedWeights" />

                            <TextView
                                android:id="@+id/max_temp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight=".3"
                                android:drawableStart="@drawable/ic_arrow_upward_red_800_18dp"
                                android:drawableLeft="@drawable/ic_arrow_upward_red_800_18dp"
                                android:drawablePadding="4dp"
                                android:text="36"
                                android:textColor="@color/color_white"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/feels_like"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight=".4"
                                android:text="Feels: 36"
                                android:textColor="@color/color_white"
                                android:textSize="12sp" />


                        </LinearLayout>
                    </LinearLayout>


                </LinearLayout>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="@dimen/margin_small"
                    app:cardBackgroundColor="#030D25"
                    app:cardCornerRadius="@dimen/margin_small"
                    app:cardElevation="@dimen/margin_small"
                    tools:targetApi="o">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/margin_small"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:weightSum="1">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight=".5"
                            android:orientation="horizontal"
                            android:weightSum="3">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="@dimen/Image_size_small"
                                    android:layout_height="@dimen/Image_size_small"
                                    android:layout_gravity="center"
                                    android:layout_marginVertical="4dp"
                                    android:src="@drawable/wind"
                                    tools:targetApi="o" />

                                <TextView
                                    android:id="@+id/wind_speed"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginVertical="4dp"
                                    android:gravity="center"
                                    android:textColor="@color/color_white"
                                    tools:targetApi="o" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:text="@string/wind"
                                    android:textColor="@color/color_light_white"
                                    tools:targetApi="o" />


                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="@dimen/Image_size_small"
                                    android:layout_height="@dimen/Image_size_small"
                                    android:layout_gravity="center"
                                    android:layout_marginVertical="4dp"
                                    android:src="@drawable/water_drop"
                                    tools:targetApi="o" />

                                <TextView
                                    android:id="@+id/humidity"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginVertical="4dp"
                                    android:gravity="center"
                                    android:textColor="@color/color_white"
                                    tools:targetApi="o" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:text="@string/humidity"
                                    android:textColor="@color/color_light_white"
                                    tools:targetApi="o" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical">


                                <ImageView
                                    android:layout_width="@dimen/Image_size_small"
                                    android:layout_height="@dimen/Image_size_small"
                                    android:layout_gravity="center"
                                    android:layout_marginVertical="4dp"
                                    android:src="@drawable/eye"
                                    tools:targetApi="o" />

                                <TextView
                                    android:id="@+id/visibility"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginVertical="4dp"
                                    android:gravity="center"
                                    android:textColor="@color/color_white"
                                    tools:targetApi="o" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:text="@string/visibility"
                                    android:textColor="@color/color_light_white"
                                    tools:targetApi="o" />

                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_small"
                            android:layout_marginBottom="@dimen/margin_small"
                            android:layout_weight=".5"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="@dimen/Image_size_small"
                                    android:layout_height="@dimen/Image_size_small"
                                    android:layout_gravity="center"
                                    android:layout_marginVertical="4dp"
                                    android:src="@drawable/speed"
                                    tools:targetApi="o" />

                                <TextView
                                    android:id="@+id/pressure"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginVertical="4dp"
                                    android:gravity="center"
                                    android:textColor="@color/color_white"
                                    tools:targetApi="o" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:text="@string/pressure"
                                    android:textColor="@color/color_light_white"
                                    tools:targetApi="o" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="@dimen/Image_size_small"
                                    android:layout_height="@dimen/Image_size_small"
                                    android:layout_gravity="center"
                                    android:layout_marginVertical="4dp"
                                    android:src="@drawable/beach"
                                    tools:targetApi="o" />

                                <TextView
                                    android:id="@+id/sunrise"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginVertical="4dp"
                                    android:gravity="center"
                                    android:textColor="@color/color_white"
                                    tools:targetApi="o" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:text="@string/sunrise"
                                    android:textColor="@color/color_light_white"
                                    tools:targetApi="o" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:layout_gravity="center"
                                    android:layout_marginVertical="4dp"
                                    android:src="@drawable/sunset"
                                    tools:targetApi="o" />

                                <TextView
                                    android:id="@+id/sunset"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginVertical="4dp"
                                    android:gravity="center"
                                    android:textColor="@color/color_white"
                                    tools:targetApi="o" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:text="@string/sunrise_sunset"
                                    android:textColor="@color/color_light_white"
                                    tools:targetApi="o" />

                            </LinearLayout>


                        </LinearLayout>


                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_small"
                    android:orientation="vertical">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/weekly_weather_list"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="@dimen/margin_small"
                        tools:targetApi="o">

                    </androidx.recyclerview.widget.RecyclerView>


                </LinearLayout>

                <ProgressBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center" />

            </LinearLayout>

            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:visibility="gone" />

        </RelativeLayout>


    </androidx.core.widget.NestedScrollView>


</LinearLayout>
